<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="mrp_production_dimension_form_view" model="ir.ui.view">
            <field name="name">mrp.production.dimension.form.view</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field eval="17" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                	<field name="dimensions" widget="one2many_list">
						<tree string="Dimensions" create="false" delete="false" editable="bottom">
							<field name="dimension" readonly="True"/>
							<field name="quantity" />
						</tree>
					</field>
                </xpath>
            </field>
        </record>
    </data>
</openerp>