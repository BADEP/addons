<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">
    <record model="ir.module.category" id="module_category_project_submission">
        <field name="name">Appels à projets</field>
        <field name="description">Gestion des appels à projets</field>
        <field name="sequence">100</field>
    </record>

    <record id="group_candidate" model="res.groups">
        <field name="name">Candidat</field>
        <field name="category_id" ref="module_category_project_submission"/>
        <field name="comment"></field>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Responsable</field>
        <field name="category_id" ref="module_category_project_submission"/>
        <field name="implied_ids" eval="[(4, ref('group_candidate'))]"/>
        <field name="comment"></field>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record model="ir.ui.menu" id="menu_project_submission_root">
        <field eval="[(4, ref('group_candidate'))]" name="groups_id"/>
    </record>
    <record model="ir.ui.menu" id="menu_project_submission_config">
        <field eval="[(4, ref('group_manager'))]" name="groups_id"/>
    </record>

</data>

<data noupdate="0">
    <!-- Multi - Salesmen sales order assignation rules -->

    <record id="candidate_personal_rule" model="ir.rule">
        <field name="name">Candidat</field>
        <field ref="model_project_candidate" name="model_id"/>
        <field name="domain_force">[('id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_candidate'))]"/>
    </record>
    <record id="candidate_submission_personal_rule" model="ir.rule">
        <field name="name">Candidatures personnels</field>
        <field ref="model_project_submission" name="model_id"/>
        <field name="domain_force">[('candidate.user','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_candidate'))]"/>
    </record>
    <record id="candidate_submission_personnel_personal_rule" model="ir.rule">
        <field name="name">Candidatures partenaires personnels</field>
        <field ref="model_project_submission_personnel" name="model_id"/>
        <field name="domain_force">[('submission.candidate.user','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_candidate'))]"/>
    </record>
    <record id="candidate_submission_budgetline_personal_rule" model="ir.rule">
        <field name="name">Lignes de budget personnels</field>
        <field ref="model_project_submission_budgetline" name="model_id"/>
        <field name="domain_force">[('submission.candidate.user','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_candidate'))]"/>
    </record>
    <!-- <record id="candidate_submission_task_personal_rule" model="ir.rule">
        <field name="name">Tâches personnelles</field>
        <field ref="model_project_submission_task" name="model_id"/>
        <field name="domain_force">[('submission.candidate.user','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_candidate'))]"/>
    </record>-->
</data>
</openerp>
