					<group string="Absences">
					<field name="abs"/>
					</group>
					<group string=" Heures Sup">
			      	<field name="hs25"/>
				    <field name="hs50"/>
					<field name="hs100"/>
					</group>
					<group string="Remboursements">
					<field name="av_sal"/>
					<field name="rem_mut"/>
					</group>
			  				
                            </page>
							</notebook>
