<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="procurement_order_extended_form_view">
            <field name="name">procurement.order.extended.form</field>
            <field name="model">procurement.order</field>
            <field name="inherit_id"
                ref="stock_product_variants.procurement_order_extended_form_view" />
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='product_attributes']/tree//field[@name='value']"
                    position="after">
                    <field name="attr_type" invisible="1" />
                    <field name="custom_value"
                        attrs="{'readonly':[('attr_type','!=','range')]}" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
