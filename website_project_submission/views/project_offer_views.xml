<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_project_offer_form" model="ir.ui.view">
        <field name="name">project.offer.form.inherit</field>
        <field name="model">project.offer</field>
        <field name="inherit_id" ref="project_submission.view_project_offer_form"/>
        <field name="arch" type="xml">
            <!-- add state field in header -->
            <xpath expr="//sheet/div" position="before">
                <field name="website_url" invisible="1"/>
                <field name="website_published" class="pull-right" widget="website_button"/>
            </xpath>
        </field>
    </record>
</data>
</openerp>
